{
  "name": "Liquify",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Enhance the Shopify theme code editor",
  "homepage_url": "https://github.com/lukechadwick/Liquify",
  "icons": {
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://*.myshopify.com/admin/themes/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.myshopify.com/admin/themes/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://*.myshopify.com/admin/themes/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/inject.js",
        "src/feature/autoFullScreen.js",
        "src/feature/slimUI.js",
        "src/feature/applyTheme.js",
        "src/feature/attachIcons.js",
        "src/feature/search.js"
      ]
    }
  ]
}